
body
    background #ebedf1
    font-family 'Lucida Grande', 'Heveltica Nueue', 'Helvetica', 'sans-serif'

demo
    padding 3em
    display block

pre
    background rgba(0,0,0,0.05)
    border 1px solid rgba(0,0,0,0.1)

section
    & + section
        margin-top 2em
        border-top 1px dashed rgba(0,0,0,.1)
        padding-top 2em


.dark.well
    background #1a1a1a
    color #ccc
    padding 3em
    margin 1em


.light
    border 1px solid fade-out(#000, 0.8)
    padding 3em
    margin 1em
    background #fff


.button, button
    display inline-block
    cursor pointer
    padding 0.6em 2.4em
    outline none

    border-radius 6px
    background linear-gradient(to bottom, #f9f9f9 5%, #e9e9e9)
    border 1px solid #dcdcdc
    box-shadow inset 0px 1px 0px 0px #ffffff

    font-family sans-serif
    font-weight bold

    text-decoration none
    text-shadow 0px 1px 0px #ffffff

    &:hover
        background linear-gradient(to bottom, #fff, #f0f0f0)

    &:active
        background linear-gradient(to bottom, #e9e9e9 5%, #f9f9f9)
        position relative
        top 1px

    &.disabled
        cursor not-allowed
        background #f0f0f0
        color #ccc
        border none
        &:hover, &:active
            background #f0f0f0



.styled-dropdown .dropdown
    padding 1em
    background #fff
    box-shadow  0 3px 9px fade-out(#000, 0.8)
    border-radius 3px

